<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Regular -->
    <font
        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/crimson_text_regular" />

    <!-- Italic -->
    <font
        app:fontStyle="italic"
        app:fontWeight="400"
        app:font="@font/crimson_text_italic" />

    <!-- SemiBold -->
    <font
        app:fontStyle="normal"
        app:fontWeight="600"
        app:font="@font/crimson_text_semibold" />

    <!-- SemiBold Italic -->
    <font
        app:fontStyle="italic"
        app:fontWeight="600"
        app:font="@font/crimson_text_semibold_italic" />

    <!-- Bold -->
    <font
        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/crimson_text_bold" />

    <!-- Bold Italic -->
    <font
        app:fontStyle="italic"
        app:fontWeight="700"
        app:font="@font/crimson_text_bold_italic" />

</font-family>